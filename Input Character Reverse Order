; Author: Hannah Atuli
; Input Character Reverse Order

.model small
.stack 100h
.data

;inputbuffer db 8 dup (?)
msginput db 'Input 8 characters: $'
msgoutput db 10, 13, 'The input character in reverse order : $'
;newline db 0dh, 0ah, '$'
;space db '$'
;BASE_OFFSET equ 35

.code
.startup
    
mov ax, 0003     
    
mov ah, 09
lea dx, msginput
int 21h       
    
mov cx, 8
    
inputloop: 

mov ah, 01
int 21h  
    
add al, 20h
push ax
    
loop inputloop 
     
mov ah, 09
lea dx, msgoutput
int 21h  
mov cx, 8 
    
mov ah, 02
mov dh, 5
mov dl, 40
int 10h          
    
outputloop: 

pop ax 
mov ah, 02
mov dl, al
int 21h 
    
mov ah, 02
mov dl, 10
int 21h   
     
mov ah, 02
mov dl, 8
int 21h  
    
mov ah, 02
mov dl, 8
int 21h    
                  
loop outputloop
    
mov ah, 4ch
int 21h     
         
end
